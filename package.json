{
  "name": "simplecalculator",
  "version": "1.0.0",
  "description": "Vanilla JS Simple Calculator with Webpack, ESLint and Prettier (safe version)",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.js --mode development",
    "build": "webpack --config config/webpack.config.js --mode production",
    "lint": "eslint src --ext .js",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "eslint": "^9.37.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@eslint/js": "^9.37.0",
    "globals": "^16.4.0"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
